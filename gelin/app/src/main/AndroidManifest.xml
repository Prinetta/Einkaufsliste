<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.moco.gelin">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gelin"
        tools:targetApi="31">
        <activity
            android:name=".AddingProductsAfterUseringScanner"
            android:exported="false"
            android:label="@string/title_activity_adding_products_after_usering_scanner"
            android:theme="@style/Theme.Gelin">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".AngebotDerWoche"
            android:exported="false"
            android:label="@string/title_activity_angebot_der_woche"
            android:theme="@style/Theme.Gelin">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".Registrierung"
            android:exported="false"
            android:label="@string/title_activity_registrierung"
            android:theme="@style/Theme.Gelin">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="de.moco.gelin.Login"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Gelin">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".view.Topbar"
            android:exported="false"
            android:label="@string/title_activity_topbar"
            android:theme="@style/Theme.Gelin">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".AppBar"
            android:exported="false"
            android:label="@string/title_activity_app_bar"
            android:theme="@style/Theme.Gelin">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/background_green" />

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="${MAPS_API_KEY}" />

        <activity
            android:name="de.moco.gelin.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gelin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>